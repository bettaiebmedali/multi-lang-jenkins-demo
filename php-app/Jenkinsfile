pipeline {
    agent any
    environment {
        DEPLOY_DIR = "${WORKSPACE}/deploy/php-app"
    }
    stages {
        stage('Install') {
            steps {
                dir('php-app') {
                    sh '''
                        echo "Installing Composer dependencies..."
                        composer install --no-interaction
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                dir('php-app') {
                    sh '''
                        echo "Running PHP unit tests..."
                        vendor/bin/phpunit --testdox || true
                    '''
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('php-app') {
                    sh '''
                        echo "Deploying PHP app..."
                        mkdir -p $DEPLOY_DIR
                        cp -r . $DEPLOY_DIR/
                        echo "âœ… PHP app deployed to $DEPLOY_DIR"
                    '''
                }
            }
        }
    }
}

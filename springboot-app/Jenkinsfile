pipeline {
    agent any
    environment {
        DEPLOY_DIR = "${WORKSPACE}/deploy/spring-boot-app"
    }
    stages {
        stage('Build') {
            steps {
                dir('spring-boot-app') {
                    sh '''
                        echo "Building Spring Boot app..."
                        ./mvnw clean package -DskipTests
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                dir('spring-boot-app') {
                    sh '''
                        echo "Running unit tests..."
                        ./mvnw test
                    '''
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('spring-boot-app') {
                    sh '''
                        echo "Deploying JAR file..."
                        mkdir -p $DEPLOY_DIR
                        cp target/*.jar $DEPLOY_DIR/
                        echo "âœ… Deployed to $DEPLOY_DIR"
                    '''
                }
            }
        }
    }
}

pipeline {
    agent any

    environment {
        DEPLOY_DIR = "${WORKSPACE}/deploy/python-app"
        REPORT_FILE = "${WORKSPACE}/python-app/reports/test-report.html"
        PATH = "/var/lib/jenkins/.local/bin:${PATH}"
    }

    options {
        timestamps()          // Ajoute l‚Äôheure dans les logs
        ansiColor('xterm')    // Couleur dans la console Jenkins
        buildDiscarder(logRotator(numToKeepStr: '10')) // Garde les 10 derniers builds
    }

    stages {
        stage('Prepare') {
            steps {
                echo "üßπ Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Install') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "üêç Installing Python dependencies..."
                        pip install --user -r requirements.txt
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "üß™ Running tests..."
                        mkdir -p reports
                        pytest --html=reports/test-report.html --self-contained-html --disable-warnings
                    '''
                }
            }
            post {
                always {
                    echo "üìÑ Archiving test results..."
                    archiveArtifacts artifacts: 'python-app/reports/test-report.html', onlyIfSuccessful: false
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "üöÄ Deploying application..."
                        mkdir -p $DEPLOY_DIR
                        cp -r app.py $DEPLOY_DIR/
                        echo "‚úÖ App deployed to $DEPLOY_DIR"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build and deployment successful!"
            emailext(
                subject: "‚úÖ SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                    <h2>Build Successful ‚úÖ</h2>
                    <p><b>Job:</b> ${env.JOB_NAME}</p>
                    <p><b>Build #:</b> ${env.BUILD_NUMBER}</p>
                    <p><b>Status:</b> SUCCESS</p>
                    <p><a href="${env.BUILD_URL}">View in Jenkins</a></p>
                """,
                attachmentsPattern: 'python-app/reports/test-report.html',
                mimeType: 'text/html',
                to: 'ton.email@gmail.com'
            )
        }

        failure {
            echo "‚ùå Build failed!"
            emailext(
                subject: "‚ùå FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                    <h2>Build Failed ‚ùå</h2>
                    <p><b>Job:</b> ${env.JOB_NAME}</p>
                    <p><b>Build #:</b> ${env.BUILD_NUMBER}</p>
                    <p><b>Status:</b> FAILURE</p>
                    <p>Check the Jenkins logs for details.</p>
                    <p><a href="${env.BUILD_URL}">View in Jenkins</a></p>
                """,
                mimeType: 'text/html',
                to: 'ton.email@gmail.com'
            )
        }

        always {
            echo "üì¨ Email notification sent."
        }
    }
}

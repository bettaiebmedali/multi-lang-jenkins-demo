pipeline {
    agent any
    environment {
        DEPLOY_DIR = "${WORKSPACE}/deploy/python-app"
    }
    stages {
        stage('Install') {
            steps {
                dir('python-app') {
                    sh 'pip install -r requirements.txt'
                }
            }
        }
        stage('Test') {
            steps {
                dir('python-app') {
                    sh 'pytest -q --disable-warnings'
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('python-app') {
                    sh '''
                        mkdir -p $DEPLOY_DIR
                        cp -r app.py $DEPLOY_DIR/
                        echo "App deployed to $DEPLOY_DIR"
                    '''
                }
            }
        }
    }
}

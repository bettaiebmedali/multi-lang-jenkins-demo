pipeline {
    agent any

    environment {
        DEPLOY_DIR = "${WORKSPACE}/deploy/python-app"
    }

    stages {
        stage('Install') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "Installing Python dependencies..."
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "Running tests..."
                        pytest -q --disable-warnings || true
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "Deploying application..."
                        mkdir -p $DEPLOY_DIR
                        cp -r app.py $DEPLOY_DIR/
                        echo "âœ… App deployed to $DEPLOY_DIR"
                    '''
                }
            }
        }
    }
}

pipeline {
    agent any

    environment {
        DEPLOY_DIR = "${WORKSPACE}/deploy/python-app"
        PATH = "/var/lib/jenkins/.local/bin:${PATH}"
    }

    options {
        timestamps()
    }

    stages {
        stage('Prepare') {
            steps {
                echo "üßπ Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Install') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "üêç Installing Python dependencies..."
                        if [ ! -f requirements.txt ]; then
                            echo "‚ö†Ô∏è No requirements.txt found, skipping dependency install."
                        else
                            pip install --user -r requirements.txt
                        fi
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "üß™ Running tests..."
                        pytest -q --disable-warnings || echo "‚ö†Ô∏è Some tests failed"
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('python-app') {
                    sh '''
                        echo "üöÄ Deploying application..."
                        mkdir -p $DEPLOY_DIR
                        cp -r app.py $DEPLOY_DIR/
                        echo "‚úÖ App deployed to $DEPLOY_DIR"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build succeeded!"
            emailext (
                subject: "‚úÖ SUCCESS: Python App Build #${BUILD_NUMBER}",
                body: "The Python pipeline completed successfully.\n\nDeployed to: ${DEPLOY_DIR}",
                to: "bitboxtraining@gmail.com"
            )
        }
        failure {
            echo "‚ùå Build failed!"
            emailext (
                subject: "‚ùå FAILURE: Python App Build #${BUILD_NUMBER}",
                body: "The Python pipeline failed.\nPlease check Jenkins logs.",
                to: "bitboxtraining@gmail.com"
            )
        }
    }
}

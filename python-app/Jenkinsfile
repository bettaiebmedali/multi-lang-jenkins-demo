pipeline {
    agent any
    environment {
        DEPLOY_DIR = "${WORKSPACE}/deploy/python-app"
    }
    stages {
        stage('Install') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest -q --disable-warnings'
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                    mkdir -p $DEPLOY_DIR
                    cp -r app.py $DEPLOY_DIR/
                    echo "App deployed to $DEPLOY_DIR"
                '''
            }
        }
    }
}
